# Uncomment the next line to define a global platform for your project
platform :ios, '9.0'
# Comment the next line if you don't want to use dynamic frameworks
use_frameworks!

def shared_pods

  # Pods

  pod 'Alamofire', '~> 4.8.2'
  # Used for parsing JSOn in simple ways
  pod 'SwiftyJSON', '~> 4.1.0'
  pod 'MXParallaxHeader', '~> 0.6.1'
  pod 'Starscream', '~> 3.0.2'

  pod 'SDWebImage', '~> 5.0.1'
  pod 'Cache'
  pod 'Firebase/Analytics'
  pod 'Firebase/Auth'
  pod 'Firebase/Firestore'
  pod 'Firebase/Database'

  # Used for segmented scroll view
  pod 'DropDown', '2.3.4'
  pod 'FLAnimatedImage', '~> 1.0.12'
  pod 'CountryPickerView'

  # Used for Database
  pod 'RealmSwift'
 
  # Used for dynamic blur
  pod 'VisualEffectView', '~> 3.1.1'
  pod 'IQKeyboardManagerSwift', '6.5.0'
  
  # Used for showing Toast
  pod 'Toast-Swift', '~> 4.0.0'
  
  # Used for Push Notification
  pod 'Fabric', '~> 1.10.2'
  pod 'Crashlytics', '~> 3.14.0'
  pod 'Firebase/Core'
  pod 'Firebase/Analytics'
  pod 'Firebase/Messaging'

  # Use Photo Slider
  pod 'SKPhotoBrowser'

  # Use to play film video
  pod 'BMPlayer', '~> 1.2.0'
  #pod 'BMPlayer/CacheSupport'

  # Pick multi images
  pod "BSImagePicker"
  
  pod 'Cosmos', '~> 22.1'
end


# DEV
target 'Business-DEV' do

 shared_pods

end

# PROD
target 'Business-PROD' do

 shared_pods

end

# STORE
target 'Business-STORE' do

 shared_pods

end
